# Package Manager
alias api="sudo apt-get install "
alias apu="sudo apt-get update"
alias apr="sudo apt-get remove "
alias app="sudo apt-get purge "

# Places
alias htd="cd ~/localhost"
alias sa="cd /etc/nginx/sites-available"

# Nginx
alias nxstop="sudo systemctl stop nginx"
alias nxstart="sudo systemctl start nginx"
alias nxres="sudo systemctl restart nginx"
alias nxrel="sudo systemctl reload nginx"
alias nxdis="sudo systemctl disable nginx"
alias nxen="sudo systemctl enable nginx"
alias nxstat="sudo systemctl status nginx"

# Misc
alias eh="sudo nano /etc/hosts"
alias sshg="ssh-keygen -t rsa -C "ashkan.pourghasem@gmail.com" -b 4096"
alias ea="nano ~/.bash_aliases"

# VNC
alias lvnc="sudo systemctl start vncserver@1.service"
alias kvnc="sudo systemctl stop vncserver@1.service"

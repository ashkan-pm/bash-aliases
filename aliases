alias ls="ls --color=none"

# Package Manager
alias api="sudo apt-get install "
alias apu="sudo apt-get update"
alias apr="sudo apt-get remove "
alias app="sudo apt-get purge "

# Places
alias htd="cd ~/localhost"

# Misc
alias eh="sudo nano /etc/hosts"
alias ea="nano ~/.zshrc"
alias sshd="cd ~/.ssh"

# Git
alias ga="git add --all"
alias gs="git status"
alias gco="git checkout "
alias gcob="git checkout -b "

# Docker
alias dil="docker image list"

# Kubectl
alias kaf="kubectl apply -f "
alias kdf="kubectl delete -f "
alias kget="kubectl get pods -n "
alias kgets="kubectl get service -n "
alias wkget="watch kubectl get pods -n "
alias kconf="kubectl config get-contexts"
alias kuse="kubectl config use-context "
alias kexec="kubectl exec -it "
alias bfg="java -jar ~/Documents/bfg-1.14.0.jar"
